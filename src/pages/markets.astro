---
import Layout from '../layouts/PageLayout.astro';

import Hero3 from '../components/widgets/Hero3.astro';
import Brands from '../components/widgets/Brands.astro';

import { markets } from '../content/pages/content.json';

const metadata = {
  title: markets.metadata,
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero3
    image={{ src: markets.hero.image, alt: markets.hero.alt }}
    isReversed = {markets.hero.isReversed}
  >
    <Fragment slot="title">
        <!-- <span class="text-accent dark:text-white highlight"> </span> -->
        <span class="text-accent bg-gray-100 px-2 py-0 rounded dark:bg-gray-300 dark:text-accent">
          {markets.hero.title}
        </span>
      <p>
        {markets.hero.title2} 
        <span class="hidden xl:inline"></span>
       </p>
    </Fragment>

    <!-- <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Tejas Automation</span> is a subtext subtext...</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Tejas Automation: Production-ready.</span>
       Suitable for Oil and Gas Producers, etc etc etc.
    </Fragment> -->
  </Hero3>

  
  <!-- Brands Widget *************** -->
  
  <Brands
    id="features"
    title={markets.brands.title}
    subtitle={markets.brands.subtitle}
    images={markets.brands.images}
  />

  
</Layout>
