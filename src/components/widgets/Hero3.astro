---
import Image from '~/components/common/Image.astro';
// import Button from '~/components/ui/Button.astro';
import type { CallToAction } from '~/types';

const thumbnail = '../../assets/images/slider-0.jpg';

export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  tagline?: string;
  content?: string;
  actions?: string | CallToAction[];
  image?: string | any; // TODO: find HTMLElementProps
  isReversed?: true | false; 
}

const {
  id,
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  image = await Astro.slots.render('image'),
  isReversed = false,
} = Astro.props;

const isPng = (thumbnail) => {
  return thumbnail.endsWith('.png');
};
---

<section class="relative" {...id ? { id } : {}}>
  <!-- Full-width image container -->
  <div class="relative w-full height=587" style="height: 576px;">
    {
      image && (
        <Image
          class="w-full h-auto object-cover"
          widths={[400, 768, 1024, 2040]}
          height={587}
          loading="eager"
          layout={isPng(thumbnail) ? 'cover' : 'cover'}
          
          {...image}
        />
      )
    }
  </div>

  <!-- Overlay content -->
  <div class={`absolute inset-0 flex items-center ${isReversed ? 'justify-end' : 'justify-start'} px-4 sm:px-6 lg:px-8`}>
    <div class="text-white w-full" style="max-width: 50%; z-index: 10;">
      {tagline && <p class="text-base font-bold tracking-wide uppercase" set:html={tagline} />}
      {title && <h1 class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4" set:html={title} />}
      {subtitle && <p class="text-xl mb-6" set:html={subtitle} />}
      <!-- Actions could be placed here as well -->
    </div>
  </div>

  <!-- Ensure that the rest of the content is placed below the full-width image -->
  {
    content && (
      <div class="py-12 md:py-20">
        <Fragment set:html={content} />
      </div>
    )
  }
</section>

<!-- Additional styles or scripts -->
<style>
  /* Make sure the menu has a higher z-index than the image overlay */
  #menu {
    z-index: 20; /* Adjust the z-index value as needed */
  }
</style>
